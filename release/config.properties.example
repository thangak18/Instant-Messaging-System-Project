# ==========================================
# SUPABASE DATABASE CONFIGURATION
# ==========================================
# Supabase PostgreSQL Connection
# IMPORTANT: Copy this file and rename to config.properties, then fill in your actual values
db.url=jdbc:postgresql://db.YOUR_PROJECT_REF.supabase.co:5432/postgres
db.username=postgres
db.password=YOUR_SUPABASE_PASSWORD
db.driver=org.postgresql.Driver

# Supabase API Keys
# Get these from your Supabase project settings
supabase.url=https://YOUR_PROJECT_REF.supabase.co
supabase.anon.key=YOUR_ANON_KEY
supabase.service.key=YOUR_SERVICE_KEY

# ==========================================
# EMAIL CONFIGURATION (Gmail SMTP)
# ==========================================
email.smtp.host=smtp.gmail.com
email.smtp.port=587
email.username=your-email@gmail.com
email.password=your-gmail-app-password
email.from.email=your-email@gmail.com
email.from.name=InstantChat System

# ==========================================
# CONNECTION POOL SETTINGS
# ==========================================
db.max.connections=10
db.min.connections=2
db.connection.timeout=30000

# ==========================================
# APPLICATION SETTINGS
# ==========================================
app.name=Chat System
app.version=1.0.0
app.admin.port=8080
app.user.port=8081

# ==========================================
# SECURITY SETTINGS
# ==========================================
security.password.min.length=6
security.password.require.special.chars=false
security.session.timeout=3600

# ==========================================
# LOGGING SETTINGS
# ==========================================
log.level=INFO
log.file.path=logs/chat_system.log
log.max.size=10MB
log.max.files=5
